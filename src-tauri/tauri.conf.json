{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "npm run dev --prefix skellycam-ui && poetry run skellycam ",
    "beforeBuildCommand": "npm run generate --prefix skellycam-ui && poetry run pyinstaller",
    "devPath": "http://localhost:3000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "SkellyCam-UI",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "sidecar": true,
        "scope": [
          {
            "name": "../dist/skellycam",
            "sidecar": true
          }
        ]
      },
      "fs": {
        "all": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "../dist/skellycam"
      ],
      "icon": [
        "../shared/skellycam-logo/skellycam-favicon.ico"
      ],
      "identifier": "skellycam.tauri.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 720,
        "width": 1280,
        "resizable": true,
        "title": "skellycam"
      }
    ]
  }
}
